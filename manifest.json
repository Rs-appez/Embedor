{
    "manifest_version": 2,
    "name": "Embedor",
    "version": "1.0",
  
    "description": "I love embed",
    
    "icons": {
      "48": "icons/icon-48.png"
    },
    "browser_specific_settings": {
      "gecko": {
        "id": "embedor@appez.com"
      }
    },
    "content_scripts": [
      {
        "matches": ["https://www.youtube.com/watch*"],
        "js": ["embedor.js"]
      }
    ]
  }
  
