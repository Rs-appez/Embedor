{
    "manifest_version": 2,
    "name": "Borderify",
    "version": "1.0",
  
    "description": "Adds a red border to all webpages matching mozilla.org.",
    
    "icons": {
      "48": "icons/border-48.png"
    },
    "browser_specific_settings": {
        "gecko": {
          "id": "borderify@example.com"
        }
      },      
    "content_scripts": [
      {
        "matches": ["https://www.youtube.com/watch*"],
        "js": ["test.js"]
      }
    ]
  }
  
